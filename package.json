{
    "name": "openaip-mapstyles",
    "authors": [
        "Stephan Besser <stephan@openaip.net>"
    ],
    "description": "Worldwide aviation database",
    "homepage": "http://www.openaip.net",
    "private": true,
    "dependencies": {
        "@mapbox/spritezero-cli": "^2.1.0"
    },
    "scripts": {
        "_createDirs": "mkdir -p ./web/fonts && mkdir -p ./web/styles/default",
        "_cleanDirs": "rm -rf ./web",
        "_resetDirs": "npm run _cleanDirs && npm run _createDirs",
        "_buildStyles": "spritezero --ratio=1 ./web/styles/default/sprite ./src/mapstyles/default/sprites-src/ && spritezero --ratio=2 ./web/styles/default/sprite@2x ./src/mapstyles/default/sprites-src/ && cp ./src/mapstyles/default/style.json ./web/styles/default/style.json",
        "build:styles": "npm run _resetDirs && npm run _buildStyles"
    }
}
